{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Database schema for Sensing Garden application",
  "properties": {
    "sensor_detections": {
      "type": "object",
      "required": [
        "device_id",
        "timestamp",
        "model_id",
        "image_key",
        "image_bucket",
        "bounding_box"
      ],
      "properties": {
        "device_id": {
          "type": "string",
          "description": "Unique identifier for the device"
        },
        "timestamp": {
          "type": "string",
          "description": "ISO-8601 formatted timestamp"
        },
        "model_id": {
          "type": "string",
          "description": "Identifier for the model used for detection"
        },
        "image_key": {
          "type": "string",
          "description": "S3 key for the stored image"
        },
        "image_bucket": {
          "type": "string",
          "description": "S3 bucket containing the image"
        },
        "bounding_box": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 4,
          "maxItems": 4,
          "description": "Bounding box coordinates [xmin, ymin, xmax, ymax] for the detection; must be 4 numbers with xmin < xmax and ymin < ymax."
        }
      }
    },
    "sensor_classifications": {
      "type": "object",
      "required": [
        "device_id",
        "timestamp",
        "model_id",
        "image_key",
        "image_bucket",
        "family",
        "genus",
        "species",
        "family_confidence",
        "genus_confidence",
        "species_confidence"
      ],
      "properties": {
        "device_id": {
          "type": "string",
          "description": "Unique identifier for the device"
        },
        "timestamp": {
          "type": "string",
          "description": "ISO-8601 formatted timestamp"
        },
        "model_id": {
          "type": "string",
          "description": "Identifier for the model used for classification"
        },
        "track_id": {
          "type": "string",
          "description": "Optional identifier for tracking related classifications or external references"
        },
        "metadata": {
          "type": "object",
          "description": "Optional metadata for future extensibility; arbitrary JSON object"
        },
        "image_key": {
          "type": "string",
          "description": "S3 key for the stored image"
        },
        "image_bucket": {
          "type": "string",
          "description": "S3 bucket containing the image"
        },
        "family": {
          "type": "string",
          "description": "Taxonomic family of the plant"
        },
        "genus": {
          "type": "string",
          "description": "Taxonomic genus of the plant"
        },
        "species": {
          "type": "string",
          "description": "Taxonomic species of the plant"
        },
        "family_confidence": {
          "type": "number",
          "description": "Confidence score for family classification (0-1)"
        },
        "genus_confidence": {
          "type": "number",
          "description": "Confidence score for genus classification (0-1)"
        },
        "species_confidence": {
          "type": "number",
          "description": "Confidence score for species classification (0-1)"
        },
        "classification_data": {
          "type": "object",
          "description": "Optional detailed classification data with multiple candidates and confidence scores"
        },
        "location": {
          "type": "object",
          "description": "Optional location data where the classification was recorded",
          "properties": {
            "lat": {
              "type": "number",
              "description": "Latitude coordinate"
            },
            "long": {
              "type": "number", 
              "description": "Longitude coordinate"
            },
            "alt": {
              "type": "number",
              "description": "Altitude in meters (optional)"
            }
          }
        },
        "pm1p0": {
          "type": "number",
          "description": "PM1.0 particulate matter concentration (μg/m³)"
        },
        "pm2p5": {
          "type": "number", 
          "description": "PM2.5 particulate matter concentration (μg/m³)"
        },
        "pm4p0": {
          "type": "number",
          "description": "PM4.0 particulate matter concentration (μg/m³)"
        },
        "pm10p0": {
          "type": "number",
          "description": "PM10.0 particulate matter concentration (μg/m³)"
        },
        "temperature": {
          "type": "number",
          "description": "Ambient temperature (°C)"
        },
        "humidity": {
          "type": "number", 
          "description": "Ambient relative humidity (%)"
        },
        "voc_index": {
          "type": "number",
          "description": "Volatile Organic Compounds index"
        },
        "nox_index": {
          "type": "number",
          "description": "Nitrogen Oxides index"
        }
      }
    },
    "models": {
      "type": "object",
      "required": [
        "id",
        "timestamp",
        "version",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the model"
        },
        "timestamp": {
          "type": "string",
          "description": "ISO-8601 formatted timestamp when the model was created"
        },
        "version": {
          "type": "string",
          "description": "Version identifier for the model"
        },
        "type": {
          "type": "string",
          "description": "Type of model (detection, classification, etc.)"
        }
      }
    },
    "videos": {
      "type": "object",
      "required": [
        "device_id",
        "timestamp",
        "video_key",
        "video_bucket",
        "type"
      ],
      "properties": {
        "device_id": {
          "type": "string",
          "description": "Unique identifier for the device"
        },
        "timestamp": {
          "type": "string",
          "description": "ISO-8601 formatted timestamp when the video was uploaded"
        },
        "video_key": {
          "type": "string",
          "description": "S3 key for the stored video"
        },
        "video_bucket": {
          "type": "string",
          "description": "S3 bucket containing the video"
        },
        "type": {
          "type": "string",
          "description": "Type of data (always 'video')"
        },
        "metadata": {
          "type": "object",
          "description": "Additional metadata about the video"
        }
      }
    },
    "environmental_readings": {
      "type": "object",
      "required": [
        "device_id",
        "timestamp"
      ],
      "properties": {
        "device_id": {
          "type": "string",
          "description": "Unique identifier for the device"
        },
        "timestamp": {
          "type": "string",
          "description": "ISO-8601 formatted timestamp when the reading was taken"
        },
        "temperature": {
          "type": "number",
          "description": "Temperature reading in Celsius (optional)"
        },
        "humidity": {
          "type": "number",
          "description": "Relative humidity percentage (0-100, optional)"
        },
        "light_level": {
          "type": "number",
          "description": "Light level reading in lux (optional)"
        },
        "pressure": {
          "type": "number",
          "description": "Atmospheric pressure in hPa (optional)"
        },
        "soil_moisture": {
          "type": "number",
          "description": "Soil moisture percentage (0-100, optional)"
        },
        "wind_speed": {
          "type": "number",
          "description": "Wind speed in m/s (optional)"
        },
        "wind_direction": {
          "type": "number",
          "description": "Wind direction in degrees (0-360, optional)"
        },
        "uv_index": {
          "type": "number",
          "description": "UV index reading (optional)"
        },
        "pm1p0": {
          "type": "number",
          "description": "PM1.0 particulate matter concentration (μg/m³, optional)"
        },
        "pm2p5": {
          "type": "number",
          "description": "PM2.5 particulate matter concentration (μg/m³, optional)"
        },
        "pm4p0": {
          "type": "number",
          "description": "PM4.0 particulate matter concentration (μg/m³, optional)"
        },
        "pm10p0": {
          "type": "number",
          "description": "PM10.0 particulate matter concentration (μg/m³, optional)"
        },
        "voc_index": {
          "type": "number",
          "description": "Volatile Organic Compounds index (optional)"
        },
        "nox_index": {
          "type": "number",
          "description": "Nitrogen Oxides index (optional)"
        },
        "location": {
          "type": "object",
          "description": "Location information for the reading (optional)"
        },
        "metadata": {
          "type": "object",
          "description": "Additional metadata about the environmental reading"
        }
      }
    }
  },
  "required": [
    "sensor_detections",
    "sensor_classifications",
    "models",
    "videos",
    "environmental_readings"
  ]
}