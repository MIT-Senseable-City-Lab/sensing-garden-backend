{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Database schema for Sensing Garden application",
  "properties": {
    "sensor_detections": {
      "type": "object",
      "required": [
        "device_id",
        "timestamp",
        "model_id",
        "image_key",
        "image_bucket",
        "bounding_box"
      ],
      "properties": {
        "device_id": {
          "type": "string",
          "description": "Unique identifier for the device"
        },
        "timestamp": {
          "type": "string",
          "description": "ISO-8601 formatted timestamp"
        },
        "model_id": {
          "type": "string",
          "description": "Identifier for the model used for detection"
        },
        "image_key": {
          "type": "string",
          "description": "S3 key for the stored image"
        },
        "image_bucket": {
          "type": "string",
          "description": "S3 bucket containing the image"
        },
        "bounding_box": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 4,
          "maxItems": 4,
          "description": "Bounding box coordinates [xmin, ymin, xmax, ymax] for the detection; must be 4 numbers with xmin < xmax and ymin < ymax."
        }
      }
    },
    "sensor_classifications": {
      "type": "object",
      "required": [
        "device_id",
        "timestamp",
        "model_id",
        "image_key",
        "image_bucket",
        "family",
        "genus",
        "species",
        "family_confidence",
        "genus_confidence",
        "species_confidence"
      ],
      "properties": {
        "device_id": {
          "type": "string",
          "description": "Unique identifier for the device"
        },
        "timestamp": {
          "type": "string",
          "description": "ISO-8601 formatted timestamp"
        },
        "model_id": {
          "type": "string",
          "description": "Identifier for the model used for classification"
        },
        "track_id": {
          "type": "string",
          "description": "Optional identifier for tracking related classifications or external references"
        },
        "metadata": {
          "type": "object",
          "description": "Optional metadata for future extensibility; arbitrary JSON object"
        },
        "image_key": {
          "type": "string",
          "description": "S3 key for the stored image"
        },
        "image_bucket": {
          "type": "string",
          "description": "S3 bucket containing the image"
        },
        "family": {
          "type": "string",
          "description": "Taxonomic family of the plant"
        },
        "genus": {
          "type": "string",
          "description": "Taxonomic genus of the plant"
        },
        "species": {
          "type": "string",
          "description": "Taxonomic species of the plant"
        },
        "family_confidence": {
          "type": "number",
          "description": "Confidence score for family classification (0-1)"
        },
        "genus_confidence": {
          "type": "number",
          "description": "Confidence score for genus classification (0-1)"
        },
        "species_confidence": {
          "type": "number",
          "description": "Confidence score for species classification (0-1)"
        },
        "family_confidence_array": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "description": "Optional array of confidence scores for all possible family classifications (probability distribution)"
        },
        "genus_confidence_array": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "description": "Optional array of confidence scores for all possible genus classifications (probability distribution)"
        },
        "species_confidence_array": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "description": "Optional array of confidence scores for all possible species classifications (probability distribution)"
        }
      }
    },
    "models": {
      "type": "object",
      "required": [
        "id",
        "timestamp",
        "version",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the model"
        },
        "timestamp": {
          "type": "string",
          "description": "ISO-8601 formatted timestamp when the model was created"
        },
        "version": {
          "type": "string",
          "description": "Version identifier for the model"
        },
        "type": {
          "type": "string",
          "description": "Type of model (detection, classification, etc.)"
        }
      }
    },
    "videos": {
      "type": "object",
      "required": [
        "device_id",
        "timestamp",
        "video_key",
        "video_bucket",
        "type"
      ],
      "properties": {
        "device_id": {
          "type": "string",
          "description": "Unique identifier for the device"
        },
        "timestamp": {
          "type": "string",
          "description": "ISO-8601 formatted timestamp when the video was uploaded"
        },
        "video_key": {
          "type": "string",
          "description": "S3 key for the stored video"
        },
        "video_bucket": {
          "type": "string",
          "description": "S3 bucket containing the video"
        },
        "type": {
          "type": "string",
          "description": "Type of data (always 'video')"
        },
        "metadata": {
          "type": "object",
          "description": "Additional metadata about the video"
        }
      }
    }
  },
  "required": [
    "sensor_detections",
    "sensor_classifications",
    "models",
    "videos"
  ]
}