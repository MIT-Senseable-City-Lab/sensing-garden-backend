{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Database schema for Sensing Garden application",
  "properties": {
    "sensor_detections": {
      "type": "object",
      "required": [
        "device_id",
        "timestamp",
        "model_id",
        "image_key",
        "image_bucket"
      ],
      "properties": {
        "device_id": {
          "type": "string",
          "description": "Unique identifier for the device"
        },
        "timestamp": {
          "type": "string",
          "description": "ISO-8601 formatted timestamp"
        },
        "model_id": {
          "type": "string",
          "description": "Identifier for the model used for detection"
        },
        "image_key": {
          "type": "string",
          "description": "S3 key for the stored image"
        },
        "image_bucket": {
          "type": "string",
          "description": "S3 bucket containing the image"
        }
      }
    },
    "sensor_classifications": {
      "type": "object",
      "required": [
        "device_id",
        "timestamp",
        "model_id",
        "image_key",
        "image_bucket",
        "family",
        "genus",
        "species",
        "family_confidence",
        "genus_confidence",
        "species_confidence"
      ],
      "properties": {
        "device_id": {
          "type": "string",
          "description": "Unique identifier for the device"
        },
        "timestamp": {
          "type": "string",
          "description": "ISO-8601 formatted timestamp"
        },
        "model_id": {
          "type": "string",
          "description": "Identifier for the model used for classification"
        },
        "image_key": {
          "type": "string",
          "description": "S3 key for the stored image"
        },
        "image_bucket": {
          "type": "string",
          "description": "S3 bucket containing the image"
        },
        "family": {
          "type": "string",
          "description": "Taxonomic family of the plant"
        },
        "genus": {
          "type": "string",
          "description": "Taxonomic genus of the plant"
        },
        "species": {
          "type": "string",
          "description": "Taxonomic species of the plant"
        },
        "family_confidence": {
          "type": "number",
          "description": "Confidence score for family classification (0-1)"
        },
        "genus_confidence": {
          "type": "number",
          "description": "Confidence score for genus classification (0-1)"
        },
        "species_confidence": {
          "type": "number",
          "description": "Confidence score for species classification (0-1)"
        }
      }
    },
    "models": {
      "type": "object",
      "required": [
        "id",
        "timestamp",
        "version",
        "description",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the model"
        },
        "timestamp": {
          "type": "string",
          "description": "ISO-8601 formatted timestamp when the model was created"
        },
        "version": {
          "type": "string",
          "description": "Version identifier for the model"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the model"
        },
        "type": {
          "type": "string",
          "description": "Type of model (detection, classification, etc.)"
        }
      }
    }
  },
  "required": [
    "sensor_detections",
    "sensor_classifications",
    "models"
  ]
}