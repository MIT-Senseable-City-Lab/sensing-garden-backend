{
    "db": {
        "sensor_detections": {
            "required": ["device_id", "timestamp", "model_id", "image_link"],
            "properties": {
                "device_id": {"type": "string"},
                "timestamp": {"type": "string"},
                "model_id": {"type": "string"},
                "image_link": {"type": "string"}
            }
        },
        "sensor_classifications": {
            "required": ["device_id", "timestamp", "model_id", "image_link", "family", "genus", "species", "family_confidence", "genus_confidence", "species_confidence"],
            "properties": {
                "device_id": {"type": "string"},
                "timestamp": {"type": "string"},
                "model_id": {"type": "string"},
                "image_link": {"type": "string"},
                "family": {"type": "string"},
                "genus": {"type": "string"},
                "species": {"type": "string"},
                "family_confidence": {"type": "float"},
                "genus_confidence": {"type": "float"},
                "species_confidence": {"type": "float"}
            }
        },
        "models": {
            "required": ["id", "timestamp", "version", "description", "type"],
            "properties": {
                "id": {"type": "string"},
                "timestamp": {"type": "string"},
                "version": {"type": "string"},
                "description": {"type": "string"},
                "type": {"type": "string"}
            }
        }
    },
    "api": {
        "detection_request": {
            "required": ["device_id", "model_id", "image"],
            "properties": {
                "device_id": {"type": "string"},
                "model_id": {"type": "string"},
                "timestamp": {"type": "string"},
                "image": {"type": "string", "description": "Base64 encoded image"}
            }
        },
        "classification_request": {
            "required": ["device_id", "model_id", "image", "family", "genus", "species", "family_confidence", "genus_confidence", "species_confidence"],
            "properties": {
                "device_id": {"type": "string"},
                "model_id": {"type": "string"},
                "timestamp": {"type": "string"},
                "image": {"type": "string", "description": "Base64 encoded image"},
                "family": {"type": "string"},
                "genus": {"type": "string"},
                "species": {"type": "string"},
                "family_confidence": {"type": "float"},
                "genus_confidence": {"type": "float"},
                "species_confidence": {"type": "float"}
            }
        }
    }
